@import 'lib';

/*
 * Style guide: http://pwalm.github.io/marketplace-style-guides/buttons.html
 *
 * <elm ui-button>Normal Button</elm>
 * <elm ui-button="btn">Primary Call to Action (probably needs a new name)</elm>
 * <elm ui-button="action">Positive Action like Yes or Launch</elm>
 * <elm ui-button="alt">Alternate Style - External Links?</elm>
 * <elm ui-button="cancel">Negative Action like Cancel or Delete</elm>
 * <elm ui-button="support">Support Action - Less Visual Emphasis</elm>
 *
 * All button sizes are $medium unless overridden by a compound class: 't', 's', 'l'.
 * On larger screens "button fat" will give you a 100% width button.
 * Use 'primo' buttons for extra horizontal padding.
 *
 */

// TODO: Edit pencil icon.

// Default state.
$btn = #4CB1FF; // blue
$action = #64BE3C; // green
$alt = #FFDC32; // yellow
$cancel = #F54B3C; // red
$support = #797979; // dark grey

// Hover state.
$btn-hvr = #42CAFE;
$action-hvr = #66D171;
$alt-hvr = #FFE26E;
$cancel-hvr = #FF6C70;
$support-hvr = #9B9B9B;

// Active state.
$btn-act = #3D86BD;
$action-act = #4D8D31;
$alt-act = #BEA435;
$cancel-act = #B63932;
$support-act = #5B5B5B;

// Disabled state.
$disabled = #CBCBCB;

// Button sizes.
$tiny = 24px;
$small = 36px;
$medium = 48px;
$large = 60px;

// Horizontal padding around the button's text.
$h-padding = 10px;

// Button font-size.
$font-size = 15px;

// Install button width.
$btn-install-width = 90px;

// Install button font-size.
$install-font-size = 12px;

[ui-button] {
    background: $btn;
    border: 0;
    border-radius: 5px;
    box-shadow: 0 2px $btn-act;
    color: #fff;
    display: inline-block;
    ellipsis();
    font: 400 $font-size/$medium $open-stack;
    height: $medium;
    white-space: nowrap;
    padding: 0 $h-padding;
    text-align: center;
    text-decoration: none;

    &:focus, &:hover, &:active {
        text-decoration: none;
    }
    &:hover, &:focus {
        background: $btn-hvr;
    }
    &:active {
        background: $btn-act;
        box-shadow: none;
    }
}

[ui-button~='btn'] {
    background: $btn;
    box-shadow: 0 2px $btn-act;

    &:hover, &:focus { background: $btn-hvr; }
    &:active { background: $btn-act; }
}

[ui-button~='action'] {
    background: $action;
    box-shadow: 0 2px $action-act;

    &:hover, &:focus { background: $action-hvr; }
    &:active { background: $action-act; }
}

[ui-button~='alt'] {
    background: $alt;
    box-shadow: 0 2px $alt-act;

    &:hover, &:focus { background: $alt-hvr; }
    &:active { background: $alt-act; }
}

[ui-button~='cancel'] {
    background: $cancel;
    box-shadow: 0 2px $cancel-act;

    &:hover, &:focus { background: $cancel-hvr; }
    &:active { background: $cancel-act; }
}

[ui-button~='support'] {
    background: $support;
    box-shadow: 0 2px $support-act;

    &:hover, &:focus { background: $support-hvr; }
    &:active { background: $support-act; }
}

[ui-button~='disabled'],
[ui-button][disabled] {
    background: $disabled;
    box-shadow: none;
}

[ui-button][disabled],
[ui-button~='disabled'],
[ui-button~='purchasing'],
[ui-button~='purchased'],
[ui-button~='installing'] {
    pointer-events: none;
}

[ui-button~='installed'],
[ui-button~='purchased'],
[ui-button~='incompatible'] {
    pointer-events: auto;
}

// Button height sizes.
[ui-button~='t'] {
    height: $tiny;
    line-height: $tiny;
}

[ui-button~='s'] {
    height: $small;
    line-height: $small;
}

[ui-button~='l'] {
    height: $large;
    line-height: $large;
}

// Waiting/loading spinner.
[ui-button~='loading-submit'] {
    position: relative;

    &:after {
        content: "";
        display: block;
        spinner('absolute alt');
        top: 8px;
    }
}

[ui-button~='product'],
[ui-button~='primo'] {
    padding: 0 32px;
}

[ui-button~='spin'] {
    display: inline-block;
    spinner('install');
}

@media $retina {
    [ui-button~='loading-submit']:after {
        spinner-alt-image('retina');
    }
    [ui-button~='spin'] {
        spinner-install-image('retina');
    }
}

@media (max-width: 600px) {
    [ui-button~='fat'] {
        display: block;
        width: 100%;
    }
}

// Install buttons.
.mkt-tile [ui-button~='install'] {
    // Unset many .button properties.
    bottom: -3px; // To compensate for the larger click target. Calculation: (24-34)/2 + 2
    box-shadow: none;
    cursor: pointer;
    font-size: $install-font-size;
    height: 34px; // Actual click-target height. Queen Krupa request.
    min-width: $btn-install-width;
    padding: 0;
    position: absolute;
    right: 0;

    em {
        // This em becomes the visual button.
        background: $btn;
        border-radius: 5px;
        box-shadow: 0 2px $btn-act;
        display: inline-block;
        ellipsis();
        font-style: normal;
        height: 24px;
        padding: 0 $h-padding;
        vertical-align: bottom;
        width: $btn-install-width;
    }
    .spin {
        display: none;
    }
    // Accomodate a better vertical align since this state has no box-shadow.
    &[disabled] {
        bottom: -5px;

        em {
            background: $disabled;
            box-shadow: none;
        }
        &:hover, &:active {
            em {
                background: $disabled;
            }
        }
    }
    &:hover em {
        background: $btn-hvr;
    }
    &:active em {
        background: $btn-act;
        box-shadow: none;
    }
    &[ui-button~='spinning'],
    &[ui-button~='purchasing'] {
        background: $btn-act;
        bottom: 0;
        height: $tiny;

        em {
            display: none;
        }
        .spin {
            display: inline-block;
        }
    }
}

// Install button launch state.
.mkt-tile [ui-button~='launch'] {
    em {
        background: $action;
        box-shadow: 0 2px $action-act;
    }
    &:hover em {
        background: $action-hvr;
    }
    &:active em {
        background: $action-act;
    }
}

// 'more' button container and button.
// These rules were a bit scattered so now they'll all be here.
.loadmore {
    list-style: none;
    margin: 0 auto;
    padding: 18px 10px;
    position: relative;
    width: 100%;

    [ui-button] {
        display: block;
        margin: auto;
        padding: 0;
        width: 100%;

        &:not(.hide) + .spinner {
            display: none;
        }
        &[ui-button~='hide'] {
            visibility: hidden;
        }
    }
    &.loading {
        button {
            visibility: hidden;
        }
        .throbber {
            display: block;
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            margin: auto;
            width: 32px;
            height: 32px;
            border-radius: 20px;
            border: 4px solid #666;
            border-color: #666 transparent;
            animation(unquote('spin 1s linear infinite'));
        }
    }
    span,
    .throbber {
        display: none;
    }
    .spinner {
        display: block;
    }
    &.pagination-error .error-text {
        display: block;
        text-align: center;
    }
}

.listing .loadmore,
.reviews-listing .loadmore {
    height: auto;
    min-height: 68px;
}

@media $at-least-desktop {
    .loadmore {
        padding: 25px 10px 0;
    }
    .grid-if-desktop .loadmore {
        padding-top: 18px;
    }
}
