@import 'lib';

.toggles {
    list-style: none;
    li {
        float: left;
        height: 24px;
        margin: 7px 0;
        width: (100% / 3);
        + li {
            border-left: 1px dotted $cement-gray;
            text-align: center;
        }
        &:last-child {
            text-align: right;
        }
    }
    a {
        color: $text;
        display: block;
        ellipsis();
        font-weight: 500;
        line-height: 40px;
        margin: -7px 0;
        padding: 0 10px;
        &.sel, &:active {
            color: $sailor-blue;
            font-weight: 500;
        }
        &:hover {
            text-decoration: none;
        }
    }
}

// Does not work with $desktop.
@media $at-least-desktop {
    .toggles {
        display: none;
    }
    #account-settings div.secondary-header {
        display: none;
    }
}
