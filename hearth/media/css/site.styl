@import 'lib';

// Site-wide or structural styles only in this file.
// Can't find a better file for your style? Create one!
// This is not your diaper.

* {
    -moz-box-sizing: border-box;
    box-sizing: border-box;
    text-rendering: optimizeLegibility;
    word-wrap: break-word;
}

.js-hidden, .hidden {
    display: none;
}

.emaillink-wrapper {
    /* Necessary when emaillink is in a paragraph. */
    display: inline-block;
}

span.emaillink {
    direction: rtl;
    unicode-bidi: bidi-override;
    .i {
        display: none;
    }
}

a {
    text-decoration: none;
    color: $sailor-blue;
    &:hover {
        text-decoration: underline;
    }
}

body {
    background: $salt-flat-white;
    color: $castle-skull-gray;
    // min-height needed so ff b2g/android can scroll to 0 (bug 872622).
    min-height: 300px;
    overflow-x: hidden;
    transform-origin: 50% 400px;
    transition: transform 1s;
    -webkit-transition: -webkit-transform 1s;
}

#site-header, #page {
    min-width: 320px;
    section.main {
        margin-left: auto;
        margin-right: auto;
        &:after {
            content: '';
            display: block;
            clear: both;
        }
        &.full {
            width: 100%;
            > div {
                margin-left: auto;
                margin-right: auto;
            }
        }
    }
}

#page {
    position: relative;
}

.row {
    clear: both;
}

.main {
    margin: 0 auto;
}
#page > .overlay {
    max-width: 100%;
}

#offline-pixel {
    display: none;
    width: 1px;
    height: 1px;
}

.two-up {
    width: 50%;
    padding: 0 5px;
    float: left;
    &:nth-child(2n+1) {
        padding-right: 0;
    }
    &:nth-child(2n) {
        padding-left: 0;
    }
}

#site-footer {
    display: none;
}

.only-logged-in {
    display: none;
}

.only-logged-out {
    display: block;
}

.logged-in .only-logged-in {
    display: block;
}

.logged-in .only-logged-out {
    display: none;
}

.spinner {
    spinner();
    &.alt {
        spinner-alt-image();
    }
    &.btn-replace {
        spinner-abs();
        top: 24px;
    }
    &.spaced {
        margin: 70px auto;
    }
    &.padded {
        padding: 70px 0;
    }
}

.newssignup {
    border-bottom: 1px dashed $london-fog-gray;
    diagonal-lines();
    position: relative;
    min-height: 90px;
    &.loading {
        background-color: rgba(255,255,255,.7);
        min-height: 90px;
        * {
            display: none;
        }
        .spinner {
            margin-bottom: 5px;
        }
        .processing {
            position: absolute;
            width: 100%;
            text-align: center;
            bottom: 10px;
        }
    }
    p {
        color: rgb(95,95,95);
    }
    .processing, .finished {
        display: none;
    }
    > div {
        float: left;
        padding: 15px 10px;
        width: 285px;
    }
    &.done {
        * {
            display: none;
        }
        .finished, .close {
            display: block;
        }
        .finished {
            padding: 25px 10px 15px;
            text-align: center;
            width: 270px;
        }
    }
    header {
        background: transparent;
        border-top: 0;
        height: inherit;
        min-height: 25px;
        &:before {
            display: none;
        }
        h3 {
            overflow: visible;
            position: static;
        }
    }
    input[type=email], button {
        border-radius: 5px;
        font-size: 13px;
        font-weight: 400;
    }
    input[type=email] {
        color: rgb(95,95,95);
        margin-right: 10px;
    }
    button {
        height: 32px;
        min-width: inherit;
    }
    .btn-side-cancel {
        float: right;
        border-left: 2px solid #bbb;
        height: 60px;
        margin-top: 15px;
        width: 30px;
        background-position: right center;
    }
}

@-webkit-keyframes spin {
    from { -webkit-transform: rotate(0turn); }
    to { -webkit-transform: rotate(1turn); }
}
@keyframes spin {
    from { transform: rotate(0turn); }
    to { transform: rotate(1turn); }
}

.roll {
    animation(unquote('0.9s spin 1 steps(30)'));
}

@media $at-least-desktop {
    html, #footer {
        background: #fff;
    }

    #footer,
    #directory-footer {
        padding: 48px 0;
        ul {
            list-style: none;
        }
    }

    #directory-footer {
        border-top: 1px dashed #000;
        font-size: 14px;
        line-height: 18px;
        .links a {
            margin-top: 8px;
            + a {
                margin-top: 10px;
            }
        }
        .devhub {
            width: 290px;
            // TODO: Get Michael to vectorize this as an SVG.
            &:before {
                background: url(../img/pretty/rocket.png) 0 50% no-repeat;
                background-size: 20px auto;
                content: "";
                display: inline-block;
                height: 100%;
                vertical-align: top;
                width: 28px;
            }
        }
        .group {
            float: left;
            min-height: 48px;
            position: relative;
            a {
                display: block;
            }
            + .group {
                padding-left: 68px;
                max-width: 200px;
            }
        }
    }

    #page .main,
    .main {
        max-width: $desktop-content;
    }

    .container {
        &.product-details,
        &.results {
            margin: 50px 0;
        }
        &.prose,
        &.form-grid {
            padding: 25px;
        }
    }

    #directory-footer .group a.region {
        background-repeat: no-repeat;
        background-size: 20px auto;
        min-height: 20px;
        overflow: visible;
        padding: 2px 0 0 28px;
        text-overflow: normal;
        &.region-worldwide {
            padding-left: 0;
        }
    }

    .region-br {
        background-image: url(../img/icons/regions/br.png);
    }

    .region-co {
        background-image: url(../img/icons/regions/co.png);
    }

    .region-es {
        background-image: url(../img/icons/regions/es.png);
    }

    .region-pl {
        background-image: url(../img/icons/regions/pl.png);
    }

    .region-uk {
        background-image: url(../img/icons/regions/uk.png);
    }

    .region-us {
        background-image: url(../img/icons/regions/us.png);
    }

    .region-ve {
        background-image: url(../img/icons/regions/ve.png);
    }

    #footzilla {
        background: url(../img/logos/footzilla.png) 0 5px no-repeat;
        float: left;
        hidetext();
        width: 100px;
        a {
            display: block;
        }
    }

    #footzilla,
    #footzilla a {
        height: 26px;
        width: 100px;
    }

    #footer {
        color: $note-gray;
        overflow: hidden;
        padding: 30px 0;
        width: 100%;
        .pad {
            margin: 0 auto;
            padding: 0;
            width: $desktop-ftr;
        }
        p, ul {
            border-left: 1px dotted $light-gray;
            font-size: 11px;
            line-height: 1.3;
            margin: 0;
            padding-left: 1em;
        }
        p {
            float: left;
            width: 60%;
        }
        ul {
            float: right;
            line-height: 1.2;
            width: 20%;
            a {
                display: block;
            }
        }
        li + li {
            margin-top: 2px;
        }
    }

    #site-footer {
        display: block;
    }

    @media $retina {
        #footzilla {
            background-image: url(../img/logos/footzilla-2x.png);
            background-size: 81px auto;
        }
    }
} // End of Desktop.

@media $retina {
    .spinner {
        spinner-base-image('retina');
        &.alt {
            spinner-alt-image('retina');
        }
    }
}
