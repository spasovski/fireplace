@import 'lib';

.collection {
    background-position: center;
    background-repeat: no-repeat;
    background-size: 160px auto;
    min-height: 150px;
    position: relative;
    header {
        bottom: 0;
        height: 62px;
        overflow: hidden;
        padding: 4px 10px 15px;
        position: absolute;
        width: 100%;
    }
    h2 {
        font-size: 19px;
        font-weight: 300;
        line-height: 30px;
    }
    .owner {
        font-size: 12px;
    }
    + .desc {
        padding: 20px 10px 10px;
    }
}

getcolor($type = '', $r, $g, $b) {
    if ($type == 'opaque') {
        background-color: rgb($r, $g, $b);
    } else {
        background-color: rgba($r, $g, $b, .8);
    }
}

// Define all the available styles here.

// Blue theme.
$blue-theme-border = 1px solid rgba(255,255,255,.25);
.blue {
    getcolor('opaque', 0, 150, 221);
    header {
        border-top: $blue-theme-border;
        getcolor('', 0, 150, 221);
    }
    h2, .owner {
        color: $white;
    }
}

@media $at-least-desktop {
    header {
        border-left: $blue-theme-border;
    }
    .owner {
        border-bottom: $blue-theme-border;
    }
    .collection + .desc {
        color: $white;
    }
}

@media $at-least-desktop {
    .collection {
        header {
            border-top: 0;
            padding: 80px 15px 15px;
            right: 0;
            width: 50%;
        }
        h2 {
            font-size: 30px;
        }
        .owner {
            font-size: 15px;
            padding: 10px 0 20px;
        }
        h2, .owner {
            padding-right: 15px;
        }
        + .desc {
            left: 50%;
            padding: 20px 15px;
            position: absolute;
            top: 155px;
            width: 346px;
        }
    }
    .collection, .collection header {
        min-height: 324px;
    }
}
