@import 'lib';

body[data-page-type=leaf] {
    #page {
        padding: 40px 0;
        .main {
            background-color: rgba(255,255,255,.3);
        }
    }
    #reviews {
        margin: 20px auto;
    }
    .listing {
        border: 0;
        .mkt-tile h3 {
            font-weight: 600;
        }
    }
    #reviews-detail {
        padding: 20px;
        ul {
            margin: 0 -20px;
            position: relative;
            .review {
                float: left;
                padding: 0 20px;
                width: 50%;
            }
            &:before {
                content: '';
                display: block;
                position: absolute;
                top: 0;
                right: 50%;
                width: 0;
                bottom: 20px;
                border-left: 1px solid rgba(255,255,255,.5);
                border-right: 1px solid rgba(3, 16, 26, .13);

            }
        }
    }
}

