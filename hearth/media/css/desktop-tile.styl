@import 'lib';


.grid {
    max-width: $desktop-content;
    .mkt-tile {
        width: 152px;
        height: 128px;
    }
    li {
        width: 25%;
        &.featured {
            width: 50%;
            height: 256px;
            // Here for an override.
            max-height: 256px;
            // These are 1px larger to deal with the double-border.
            .mkt-tile {
                width: 305px;
                height: 257px;
            }
        }
    }
}
// Put a left border on the first one of each line.
#featured-home .grid li:nth-child(5n) {
    border-left: 1px solid $black-border;
}
